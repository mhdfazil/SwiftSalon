<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.EarningsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/custom_titlebar"
        >

        <ImageButton
            android:id="@+id/btn_back"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earnings"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.483" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/title_bar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:background="@color/light_blue"
                    >

                    <TextView
                        android:id="@+id/txt_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        />

                    <ImageButton
                        android:id="@+id/btn_day_previous"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:src="@drawable/ic_round_chevron_left_24"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="-5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/transparent_white"
                        />

                    <ImageButton
                        android:id="@+id/btn_day_next"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:src="@drawable/ic_round_chevron_right_24"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="-5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/transparent_white"
                        />

                    <TextView
                        android:id="@+id/txt_day_earning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/txt_day"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_below="@id/txt_day_earning"
                        android:background="@color/transparent_white"
                        />

                    <TextView
                        android:id="@+id/txt_day_appointments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_round_event_available_24"
                        />

                    <ProgressBar
                        android:id="@+id/prg_day"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        style="?android:attr/progressBarStyleSmall"
                        android:indeterminate="true"
                        android:layout_centerInParent="true"
                        android:indeterminateTint="@color/white"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_day_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:visibility="gone"
                        />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:background="@color/orange"
                    >

                    <TextView
                        android:id="@+id/txt_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        />

                    <ImageButton
                        android:id="@+id/btn_month_previous"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:src="@drawable/ic_round_chevron_left_24"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="-5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/transparent_white"
                        />

                    <ImageButton
                        android:id="@+id/btn_month_next"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:src="@drawable/ic_round_chevron_right_24"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="-5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/transparent_white"
                        />

                    <TextView
                        android:id="@+id/txt_month_earning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_below="@id/txt_month"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:layout_below="@id/txt_month_earning"
                        android:background="@color/transparent_white"
                        />

                    <TextView
                        android:id="@+id/txt_month_appointments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_round_event_available_24"
                        />

                    <ProgressBar
                        android:id="@+id/prg_month"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        style="?android:attr/progressBarStyleSmall"
                        android:indeterminate="true"
                        android:layout_centerInParent="true"
                        android:indeterminateTint="@color/white"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_month_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:visibility="gone"
                        />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_stylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:padding="5dp"
                    android:background="@color/matt_black"
                    >

                    <TextView
                        android:id="@+id/txt_stylist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        />


                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/txt_stylist"
                        android:layout_marginTop="-3dp" />

                    <ProgressBar
                        android:id="@+id/prg_stylist"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        style="?android:attr/progressBarStyleSmall"
                        android:indeterminate="true"
                        android:layout_centerInParent="true"
                        android:indeterminateTint="@color/white"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_stylist_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Not enough data found"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:visibility="gone"
                        />



                    <ImageButton
                        android:id="@+id/btn_stylist_previous"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:src="@drawable/ic_round_chevron_left_24"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="-5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/transparent_white"
                        />

                    <ImageButton
                        android:id="@+id/btn_stylist_next"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:src="@drawable/ic_round_chevron_right_24"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="-5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/transparent_white"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>