<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".ui.activity.EditStylistActivity">

    <ImageButton
        android:id="@+id/btn_back"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_arrow_back_24" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_below="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/txt_edit"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/txt_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_shape"
        android:focusableInTouchMode="true"
        android:maxLength="50"
        android:focusedByDefault="true" />

    <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/sgm_gender"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_below="@id/txt_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:divider="@color/light_grey"
        app:dividerWidth="1dp"
        app:radius="50dp"
        app:ripple="true"
        app:rippleColor="@color/light_grey"
        app:selectedBackground="@color/dark_purple"
        android:visibility="gone"
        app:selectionAnimationInterpolator="overshoot">

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:fontFamily="@font/muli"
            app:selectedTextColor="@color/white"
            app:text="Male"
            app:textColor="@color/dark"
            app:textSize="17sp" />

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:fontFamily="@font/muli"
            app:selectedTextColor="@color/white"
            app:text="Female"
            app:textColor="@color/dark"
            app:textSize="17sp" />

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:fontFamily="@font/muli"
            app:selectedTextColor="@color/white"
            app:text="Neutral"
            app:textColor="@color/dark"
            app:textSize="17sp" />


    </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>

    <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/sgm_status"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_below="@id/sgm_gender"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:divider="@color/light_grey"
        app:dividerWidth="1dp"
        app:radius="50dp"
        app:ripple="true"
        app:rippleColor="@color/light_grey"
        app:selectedBackground="@color/dark_purple"
        android:visibility="gone"
        app:selectionAnimationInterpolator="overshoot">

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:fontFamily="@font/muli"
            app:selectedTextColor="@color/white"
            app:text="Available"
            app:textColor="@color/dark"
            app:textSize="17sp" />

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:fontFamily="@font/muli"
            app:selectedTextColor="@color/white"
            app:text="Unavailable"
            app:textColor="@color/dark"
            app:textSize="17sp" />


    </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>

    <TextView
        android:id="@+id/txt_warning"
        android:layout_width="270dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sgm_status"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/grey"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/btn_save"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:layout_below="@id/txt_warning"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/button2_shape">

        <TextView
            android:id="@+id/btn_save_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <ProgressBar
            android:id="@+id/btn_save_progress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            style="?android:attr/progressBarStyleSmall"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            />

    </RelativeLayout>

</RelativeLayout>