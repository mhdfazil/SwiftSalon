<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape android:shape="rectangle">
        <corners android:radius="50dp" />
        <gradient android:startColor="@color/purple" android:endColor="@color/dark_purple" />
    </shape>
</item>

<item android:bottom="1dp" android:right="1dp" android:left="1dp">
    <shape android:shape="rectangle">
        <solid android:color="@color/dark_purple" />
        <corners android:radius="50sp" />
        <stroke android:color="@color/purple" android:width="2sp" />
    </shape>
</item>

</layer-list>